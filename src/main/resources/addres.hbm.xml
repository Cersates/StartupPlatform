<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.onpu.diplom.entity.Address" table="addresses">
        <meta attribute="class-description">This class contains the Addres.</meta>
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="country" column="country" type="java.lang.String"/>
        <property name="region" column="region" type="java.lang.String"/>
        <property name="city" column="city" type="java.lang.String"/>
        <property name="street" column="street" type="java.lang.String"/>
        <property name="building" column="building" type="java.lang.String"/>

    </class>

</hibernate-mapping>
